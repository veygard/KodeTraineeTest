<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="68dp">

    <ImageView
            android:layout_width="72dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_line_big"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView2header"
            android:layout_marginStart="24dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year_header_field"
            style="@style/text_medium"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@tools:sample/lorem"
            app:layout_constraintStart_toEndOf="@+id/imageView2header"
            app:layout_constraintEnd_toStartOf="@id/imageView3header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:layout_width="72dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_line_big"
            android:id="@+id/imageView3header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>