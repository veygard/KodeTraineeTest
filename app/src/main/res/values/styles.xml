<?xml version="1.0" encoding="utf-8"?>

<resources>


    <style name="TopAppBar">
        <item name="android:textSize">15sp</item>
        <item name="tabTextColor">@color/text_tetriary</item>
        <item name="tabSelectedTextColor">@color/light_text_primary</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@android:style/TextAppearance</item>

    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>

    </style>

    <style name="MyCustomTextAppearance2" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="OutlinedRoundedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="headline_medium">
        <item name="android:textColor">@color/light_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="caption_one_regular">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="subhead_medium">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">18sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="text_semibold">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">@color/light_text_primary</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="text_medium">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">@color/text_tetriary</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>


    <style name="text_regular">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="OutlinedRoundedBox2" parent="@style/Widget.AppCompat.SearchView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">15sp</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">#00BCD4</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="SheetStyle" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">auto</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
    </style>


</resources>